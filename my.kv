<RootWidget>:
    stopbutton: stopbutton
    numberholder: numberholder
    add: add
    minus: minus

    orientation: 'vertical'

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 0.25

        Label:
            text: 'Camera Display'
            size_hint: 1, 0.3
        
        BoxLayout:
            orientation: 'horizontal'
            Button:
                id: add
                size_hint: 0.2, 0.8
                text: 'Add'
                on_press: root.increment()

            Label:
                id: numberholder
                text: '0'
                size_hint: 0.6, 0.8
            
            Button:
                id: minus
                size_hint: 0.2, 0.8
                text: 'Minus'
                on_press: root.decrement()
        
        BoxLayout:
            Button:
                id: stopbutton
                size_hint: 0.2, 0.8
                text: 'Close'
                on_press: root.stop()

